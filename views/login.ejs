<!DOCTYPE html>
<html>
<head>
    <title>登录页面</title>
    <link rel='stylesheet' href='./stylesheets/style.css' />
    <script src="./javascripts/jquery.js"></script>

</head>
<body>
<!--<h1>欢迎来到登录页面</h1>-->
<!--<p>Welcome to <%= title %></p>-->

<span>用户名：</span>
<input type="text" id="name" />

<!--<span>年龄：</span>-->
<!--<input type="text" id="age" />-->

<span>密码：</span>
<input type="password" id="password" />

<button id="submitlogin">提交</button>

<script>
  $('#submitlogin').click(() => {
    const name = $('#name').val();
    //const age = $('#age').val();
    const password = $('#password').val();
    if(!name || !password){

      alert('用户名或密码不能为空');
      return;
    }
    $.post("/api/login/newlogin", { "name": name,"password":password },
        function(data){
          //console.log(data); //  2pm
          if(data.login === false){
            alert('用户名或密码错误!');
          }else {
            alert('登录成功!');
            window.location.href = "/";  //实现返回结果后实现跳转
          }
        });
  });
</script>
</body>
</html>
